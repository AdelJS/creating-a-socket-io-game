extends layout.jade

block contents
  .row
    .col-xs-12.options-bar
      button.btn.btn-lg.btn-success Create A New Picture
    .col-xs-12
      table.table.table-striped.table-bordered
        tr
          th picture
          th diffs
          th games
          th clicks
          th time
        each picture in pictures
          tr
            td: img.img-responsive(width="100" src=picture.url)
            td= picture.diffs
            td= picture.games
            td= picture.clicks
            td= picture.time